---
// Project card component with brutalism design
export interface Props {
  title: string;
  description: string;
  link: string;
  buttonText: string;
}

const { title, description, link, buttonText } = Astro.props;
---

<div class="bg-white dark:bg-dark-800 p-6 lg:p-8 border-2 border-black dark:border-white shadow-brutal-lg hover:shadow-brutal-xl transition-all duration-300 transform hover:-translate-y-2">
  <h3 class="text-xl lg:text-2xl font-bold mb-3 lg:mb-4 font-mono text-brutal-600 dark:text-brutal-400">{title}</h3>
  <p class="mb-4 lg:mb-6 text-base lg:text-lg">
    {description}
  </p>
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-block bg-brutal-400 text-black px-4 lg:px-6 py-2 lg:py-3 font-bold border-2 border-black shadow-brutal hover:shadow-brutal-hover transition-all duration-200 transform hover:-translate-y-1 hover:translate-x-1 text-sm lg:text-base"
  >
    {buttonText} â†’
  </a>
</div> 