---
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import Navigation from "../components/Navigation.astro";
import HeroSection from "../components/HeroSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en" class="scroll-smooth">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- SEO Meta Tags -->
    <title>Mares Popa - Senior Software Engineer</title>
    <meta
      name="description"
      content="I'm Mares Popa, a senior software engineer with expertise in front-end web development, creating solutions with frameworks like Next.js, TypeScript, React, and more."
    />
    <meta
      name="keywords"
      content="Mares Popa, Senior Software Engineer, Front-End Developer, UI/UX Developer, Next.js, React, TypeScript, AngularJS, Sass, Tailwind CSS, Web Development"
    />
    <meta name="author" content="Mares Popa" />
    <GoogleAnalytics measurementId={"G-WY0KQ8W98H"} />

    <!-- Open Graph Meta Tags (For Social Media Previews) -->
    <meta property="og:title" content="Mares Popa - Senior Software Engineer" />
    <meta
      property="og:description"
      content="Mares Popa is a senior software engineer specializing in front-end web development, working with Next.js, TypeScript, React, and more."
    />
    <meta property="og:image" content="URL_to_Your_Profile_or_Logo_Image" />
    <meta property="og:url" content="https://marespopa.com" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Mares Popa - Senior Software Engineer"
    />
    <meta
      name="twitter:description"
      content="I'm Mares Popa, a senior software engineer with expertise in front-end web development."
    />
    <meta name="twitter:image" content="https://twitter.com/smoothwizz" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Theme initialization script to prevent flash -->
    <script is:inline>
      // Immediately apply theme to prevent flash
      const theme = localStorage.getItem('theme') || 
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class="bg-emerald-50 dark:bg-dark-950 font-sans text-black dark:text-white transition-colors duration-300">
    <ThemeToggle />
    <Navigation />
    
    <main class="pt-20">
      <HeroSection />
      <ProjectsSection />
      <ContactSection />
    </main>

    <Footer />
  </body>
</html>
